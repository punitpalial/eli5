{
  "name": "ELi5",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Explains anything to you as if you are 5",
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "popup.js",
        "selectedTextExplanation/content.js",
        "areaScreenShotExplanation/content.js"
      ],
      "css": [
        "selectedTextExplanation/style.css",
        "areaScreenShotExplanation/style.css",
        "styles/tailwind.css"
      ]
    }
  ],
  "background": {
    "service_worker": "geminiAPICall.js",
    "type": "module"
  },
  "permissions": ["storage", "tabs", "activeTab"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/tailwind.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>", "*://*/*"],
  "options_page": "/options/options.html",
  "author": "Punit Palial"
}
